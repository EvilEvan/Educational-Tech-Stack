{
  "name": "blazingly-fast-tech-stack-learning",
  "version": "2.0.0",
  "description": "Learn the blazingly fast tech stack: shadcn/ui + Clerk + Convex from The Coding Sloth's tutorial",
  "main": "index.js",
  "scripts": {
    "start": "live-server --port=3000 --open=/exercises/web-basics/",
    "dev": "live-server --port=3000 --watch=exercises/",
    "create-next-app": "npx create-next-app@latest",
    "setup-stack": "echo 'Run: npm install @clerk/nextjs convex framer-motion' && echo 'Then: npx shadcn-ui@latest init'",
    "test": "jest",
    "lint": "eslint exercises/**/*.js",
    "format": "prettier --write exercises/**/*.{js,html,css,md}"
  },
  "keywords": [
    "shadcn-ui",
    "clerk",
    "convex",
    "nextjs",
    "react",
    "typescript",
    "full-stack",
    "education",
    "tutorial",
    "coding-sloth"
  ],
  "author": "Based on The Coding Sloth's Blazingly Fast Tech Stack",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "jest": "^29.7.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "@jest/globals": "^29.7.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "chart.js": "^4.4.0",
    "bootstrap": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/educational-tech-stack.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/educational-tech-stack/issues"
  },
